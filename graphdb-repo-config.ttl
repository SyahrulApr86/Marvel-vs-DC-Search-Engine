# GraphDB Repository Configuration untuk Marvel DC Knowledge Base
# File ini dapat digunakan untuk membuat repository 'kb' secara otomatis

@prefix rep: <http://www.openrdf.org/config/repository#> .
@prefix sr: <http://www.openrdf.org/config/repository/sail#> .
@prefix sail: <http://www.openrdf.org/config/sail#> .
@prefix owlim: <http://www.ontotext.com/trree/owlim#> .

[] a rep:Repository ;
    rep:repositoryID "kb" ;
    rdfs:label "Marvel DC Knowledge Base" ;
    rep:repositoryImpl [
        rep:repositoryType "graphdb:SailRepository" ;
        sr:sailImpl [
            sail:sailType "graphdb:Sail" ;

            # Basic repository settings
            owlim:repository-type "file-repository" ;
            owlim:entity-index-size "10000000" ;
            owlim:entity-id-size  "32" ;
            owlim:imports "" ;
            owlim:resolver-name "graphdb" ;

            # Storage settings
            owlim:storage-folder "storage" ;
            owlim:enable-context-index "false" ;
            owlim:enablePredicateList "true" ;
            owlim:in-memory-literal-properties "true" ;
            owlim:enable-literal-index "true" ;

            # Performance settings
            owlim:cache-memory "80m" ;
            owlim:tuple-index-memory "80m" ;

            # Query settings
            owlim:query-timeout "0" ;
            owlim:query-limit-results "0" ;
            owlim:throw-QueryEvaluationException-on-timeout "false" ;
            owlim:read-only "false" ;

            # Inference settings (disabled for better performance with large datasets)
            owlim:ruleset "empty" ;
            owlim:disable-sameAs "true" ;

            # Full-text search settings
            owlim:fts-memory "50m" ;
            owlim:fts-index-policy "never" ;

            # Consistency checking
            owlim:check-for-inconsistencies "false" ;
        ]
    ] . 